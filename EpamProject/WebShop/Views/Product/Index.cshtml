@model WebShop.ViewModels.Product.ProductIndexModel

@{
    ViewData["Title"] = "Catalog";
}

<h1>Products</h1>

@if (Model.ProductList.Any())
{
    <div class="catalog">
        @foreach (var product in Model.ProductList)
        {
            <form asp-action="AddToCart" asp-route-id="@product.ID" method="post" class="catalog__item">
                <div class="catalog__item__img__box">
                    <img src="@product.ImageURL" alt="@product.Name)"
                         class="catalog__item__img" />
                </div>
                <h2><a asp-action="Details" asp-route-id="@product.ID" class="catalog__item__name">@product.Name</a></h2>
                <h3 class="catalog__item__price">@string.Format("{0:C}", product.Price)</h3>
                buy
                <input type="submit" asp-action="AddToCart" asp-route-id="@product.ID" class="catalog__item__tocart btn btn-default">
                <a asp-action="Delete" asp-route-id="@product.ID">Delete</a>

                <input type="hidden" asp-for="@product.ID" name="id" />
                <input type="hidden" asp-for="@product.Name" name="name" />
                <input type="hidden" asp-for="@product.ImageURL" name="imageURL" />
                <input type="hidden" asp-for="@product.Price" name="price" />
            </form>
        }
    </div>
}
else
{
    <div class="catalog__items">
        THERE ARE NO RESULTS THAT MATCH YOUR SEARCH
    </div>
}