@model WebShop.ViewModels.Cart.CartIndexModel


@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>

<div class="catalog">
    @if (Model.CartItemsList.Any())
    {
        @foreach (var cartItem in Model.CartItemsList)
        {
            <div class="catalog__item">
                <div class="catalog__item__img__box">
                    <img src="@cartItem.ImageURL" alt="@cartItem.Name)"
                         class="catalog__item__img" />
                </div>
                <h2><a asp-controller="Product" asp-action="Details" asp-route-id="@cartItem.ID" class="catalog__item__name">@cartItem.Name</a></h2>
                <h3 class="catalog__item__price">@string.Format("{0:C}", cartItem.Price)</h3>
                <h3>@cartItem.Amount</h3>
                <buttom asp-action="Delete" asp-route-id="@cartItem.ID" class="catalog__item__tocart btn btn-default">Delete</buttom>
            </div>
        }
    }
    else
    {
        <h2>No Items</h2>
    }
</div>
